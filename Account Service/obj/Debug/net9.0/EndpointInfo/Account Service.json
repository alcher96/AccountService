{
  "openapi": "3.0.4",
  "info": {
    "title": "Banking API",
    "version": "v1"
  },
  "paths": {
    "/api/Account": {
      "post": {
        "tags": [
          "Account"
        ],
        "summary": "Создаёт новый банковский счёт",
        "description": "Создаёт счёт для указанного владельца с заданными параметрами.\r\nПоддерживаемые валюты: RUB, USD, EUR.\r\nПроцентная ставка обязательна для типов Deposit и Credit, но не для Checking.",
        "requestBody": {
          "description": "Данные для создания счёта",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAccountCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAccountCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateAccountCommand"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Счёт успешно создан"
          },
          "400": {
            "description": "Недопустимые данные (например, неподдерживаемая валюта)",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "Получает список счетов с фильтрам по владельцу и типу",
        "description": "Возвращает список счетов, отфильтрованный по идентификатору владельца (опционально) и типу счёта (опционально).\r\nЕсли параметры не указаны, возвращает все доступные счета.",
        "parameters": [
          {
            "name": "ownerId",
            "in": "query",
            "description": "ID владельца (опционально)",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "Тип счёта (опционально)",
            "schema": {
              "$ref": "#/components/schemas/AccountType"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Список счетов успешно возвращён"
          }
        }
      }
    },
    "/api/Account/{id}": {
      "get": {
        "tags": [
          "Account"
        ],
        "summary": "Получает данные счёта по идентификатору",
        "description": "Возвращает полную информацию о счёте по указанному идентификатору.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Идентификатор счёта",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Счёт найден и возвращён"
          },
          "400": {
            "description": "Неверный формат идентификатора",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Счёт не найден"
          }
        }
      },
      "put": {
        "tags": [
          "Account"
        ],
        "summary": "Обновляет данные счёта",
        "description": "Полностью обновляет данные счёта с указанным идентификатором.\r\nВсе поля должны быть предоставлены.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Идентификатор счёта",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Новые данные счёта",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAccountRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAccountRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UpdateAccountRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Счёт успешно обновлён",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AccountDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountDto"
                }
              }
            }
          },
          "400": {
            "description": "Недопустимые данные",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Счёт не найден",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "patch": {
        "tags": [
          "Account"
        ],
        "summary": "Частично обновляет данные счёта",
        "description": "Обновляет только указанные поля счёта (например, валюта, процентная ставка).\r\nПоддерживаемые поля: Currency, Type, InterestRate, Balance.\r\nНельзя изменить валюту, если по счёту есть транзакции.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Идентификатор счёта",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Данные для частичного обновления",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PatchAccountRequestDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PatchAccountRequestDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PatchAccountRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Счёт успешно обновлён",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AccountDto"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountDto"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountDto"
                }
              }
            }
          },
          "400": {
            "description": "Недопустимые данные или попытка изменить валюту при наличии транзакций",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Счёт не найден",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Account"
        ],
        "summary": "Удаляет счёт",
        "description": "Удаляет счёт с указанным идентификатором.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Идентификатор счёта",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Счёт успешно удалён"
          },
          "400": {
            "description": "Ошибка валидации",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Счёт не найден",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Transaction": {
      "post": {
        "tags": [
          "Transaction"
        ],
        "summary": "Регистрирует транзакцию по счёту",
        "description": "Создаёт новую транзакцию (дебетовую или кредитную) для указанного счёта.\r\nВалюта транзакции должна совпадать с валютой счёта.",
        "requestBody": {
          "description": "Данные транзакции",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTransactionCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTransactionCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateTransactionCommand"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Транзакция успешно создана"
          },
          "400": {
            "description": "Недопустимые данные (например, недостаточно средств)",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Счёт не найден",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Transaction/transfers": {
      "post": {
        "tags": [
          "Transaction"
        ],
        "summary": "Выполняет перевод между счетами",
        "description": "Создаёт две транзакции: дебетовую для счёта отправителя и кредитную для счёта получателя.\r\nВалюта перевода должна совпадать с валютами обоих счетов.",
        "requestBody": {
          "description": "Данные перевода",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PerformTransferCommand"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PerformTransferCommand"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PerformTransferCommand"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Перевод успешно выполнен"
          },
          "400": {
            "description": "Недопустимые данные (например, недостаточно средств или разные валюты)",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Один из счетов не найден",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Transaction/{accountId}": {
      "get": {
        "tags": [
          "Transaction"
        ],
        "summary": "Получает выписку по счёту за период",
        "description": "Возвращает список транзакций для указанного счёта, отфильтрованный по датам (опционально).\r\nЕсли даты не указаны, возвращаются все транзакции.",
        "parameters": [
          {
            "name": "accountId",
            "in": "path",
            "description": "Идентификатор счёта",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "name": "startDate",
            "in": "query",
            "description": "Начальная дата периода (опционально)",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "endDate",
            "in": "query",
            "description": "Конечная дата периода (опционально)",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Выписка успешно возвращена"
          },
          "400": {
            "description": "Недопустимые даты (например, endDate раньше startDate)",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "404": {
            "description": "Счёт не найден",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccountDto": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "ownerId": {
            "type": "string",
            "format": "uuid"
          },
          "accountType": {
            "$ref": "#/components/schemas/AccountType"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "balance": {
            "type": "number",
            "format": "double"
          },
          "interestRate": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "openingDate": {
            "type": "string",
            "format": "date-time"
          },
          "closingDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "AccountType": {
        "enum": [
          "Checking",
          "Deposit",
          "Credit"
        ],
        "type": "string"
      },
      "CreateAccountCommand": {
        "type": "object",
        "properties": {
          "ownerId": {
            "type": "string",
            "format": "uuid"
          },
          "accountType": {
            "$ref": "#/components/schemas/AccountType"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "balance": {
            "type": "number",
            "format": "double"
          },
          "interestRate": {
            "type": "number",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateTransactionCommand": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "type": {
            "$ref": "#/components/schemas/TransactionType"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
          "dateTime": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "PatchAccountRequestDto": {
        "type": "object",
        "properties": {
          "currency": {
            "type": "string",
            "nullable": true
          },
          "type": {
            "$ref": "#/components/schemas/AccountType"
          },
          "interestRate": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "balance": {
            "type": "number",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PerformTransferCommand": {
        "type": "object",
        "properties": {
          "fromAccountId": {
            "type": "string",
            "format": "uuid"
          },
          "toAccountId": {
            "type": "string",
            "format": "uuid"
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "TransactionType": {
        "enum": [
          "Credit",
          "Debit"
        ],
        "type": "string"
      },
      "UpdateAccountRequestDto": {
        "type": "object",
        "properties": {
          "ownerId": {
            "type": "string",
            "format": "uuid"
          },
          "type": {
            "$ref": "#/components/schemas/AccountType"
          },
          "currency": {
            "type": "string",
            "nullable": true
          },
          "interestRate": {
            "type": "number",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}